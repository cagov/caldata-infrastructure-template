default_language_version:
  python: python3.10
repos:
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v2.3.0
    hooks:
      - id: check-yaml
        args:
          - --unsafe
      - id: check-json
      - id: end-of-file-fixer
      - id: trailing-whitespace
  - repo: https://github.com/pre-commit/mirrors-prettier
    rev: v2.7.1
    hooks:
      - id: prettier
        types: [yaml]
  - repo: https://github.com/adrienverge/yamllint.git
    rev: v1.28.0
    hooks:
      - id: yamllint
        args: []
  # Note: for SQLFluff we override the entrypoint for two reasons:
  #   1. dbt cloud looks for config in the dbt project directory, so we put it in
  #      transform/, however sqlfluff requires the templater config to be in the
  #      current working directory. So we have to cd to transform/ to properly set the
  #      templater config.
  #   2. Some machines (such as ODI Macs) seem to struggle with sqlfluff's
  #      multiprocessing implementation, so we force it to be single-process.
  - repo: https://github.com/sqlfluff/sqlfluff
    rev: 2.0.3
    hooks:
{% if dbt_target == 'BigQuery' %}
      - id: sqlfluff-lint
        entry: bash -c 'cd transform && sqlfluff lint --processes 1'
        additional_dependencies:
          - dbt-bigquery==1.4.2
          - sqlfluff-templater-dbt==2.0.3
          - dbt-core==1.4.5
      - id: sqlfluff-fix
        entry: bash -c 'cd transform && sqlfluff lint --processes 1'
        additional_dependencies:
          - dbt-bigquery==1.4.2
          - sqlfluff-templater-dbt==2.0.3
          - dbt-core==1.4.5
{% elif dbt_target == 'Snowflake' %}
      - id: sqlfluff-lint
        entry: bash -c 'cd transform && sqlfluff lint --processes 1'
        additional_dependencies:
          - dbt-snowflake==1.4.2
          - sqlfluff-templater-dbt==2.0.3
          - dbt-core==1.4.5
      - id: sqlfluff-fix
        entry: bash -c 'cd transform && sqlfluff lint --processes 1'
        additional_dependencies:
          - dbt-snowflake==1.4.2
          - sqlfluff-templater-dbt==2.0.3
          - dbt-core==1.4.5
{% endif %}
